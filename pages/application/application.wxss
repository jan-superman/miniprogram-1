.top_search {
  height: 44px;
  width: 100%;
  background-color: white;
  display: flex;
  align-items: center;
  padding-left: 24px;
  box-shadow: 0px 2px 3px 0px rgba(0, 0, 0, 0.1);
}
.top_search .title {
  color: #101010;
  font-size: 16px;
}
.top_search .search_box {
  width: 201px;
  height: 25px;
  margin-left: 24px;
  border-radius: 8px;
  background-color: #ffffff;
  color: #101010;
  font-size: 14px;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.07);
  position: relative;
}
.top_search .search_box input {
  position: absolute;
  border-radius: 8px;
  width: 100%;
  height: 100%;
  padding-left: 33px;
  color: #cecece;
}
.top_search .search_box image {
  position: absolute;
  width: 14px;
  height: 14px;
  left: 13px;
  top: 6px;
}
.top_search .scan_code {
  height: 20px;
  width: 20px;
  margin-left: 29px;
}
.top_search .scan_code image {
  width: 20px;
  height: 20px;
}
.top_search .message {
  height: 20px;
  width: 20px;
  margin-left: 19px;
}
.top_search .message image {
  width: 20px;
  height: 20px;
}
.scrollarea {
  width: 100%;
}
.scrollarea .tag_bar {
  box-sizing: border-box;
  width: 100%;
  height: 85px;
  padding-left: 22px;
  padding-right: 22px;
  display: flex;
  gap: 27px;
  color: white;
}
.scrollarea .tag_bar > view {
  border-radius: 10px;
}
.scrollarea .tag_bar view {
  height: 100%;
  overflow: hidden;
}
.scrollarea .tag_bar view image {
  height: 86px;
}
.scrollarea .tag_bar .bar_left {
  flex: 1;
  background: linear-gradient(117.31deg, #fee800 11.25%, #ff960e 100%);
  position: relative;
}
.scrollarea .tag_bar .bar_left image {
  position: absolute;
  width: 73px;
  bottom: -25px;
}
.scrollarea .tag_bar .bar_left .title {
  position: absolute;
  font-size: 10px;
  left: 83px;
  top: 27px;
}
.scrollarea .tag_bar .bar_left .info {
  position: absolute;
  left: 83px;
  font-size: 9px;
  top: 45px;
}
.scrollarea .tag_bar .bar_right {
  flex: 1;
  background: linear-gradient(109.09deg, #95f9da 8.35%, #53bde8 122.08%);
  position: relative;
}
.scrollarea .tag_bar .bar_right image {
  position: absolute;
  width: 78px;
  height: 71px;
  bottom: 0;
}
.scrollarea .tag_bar .bar_right .title {
  font-size: 9px;
  top: 27px;
  position: absolute;
  font-size: 10px;
  right: 10px;
}
.scrollarea .tag_bar .bar_right .info {
  right: 10px;
  top: 45px;
  font-size: 9px;
  position: absolute;
}
.scrollarea .recommend {
  width: 100%;
  padding-left: 22px;
  height: 208px;
  margin-top: 34px;
  box-sizing: border-box;
}
.scrollarea .recommend .title {
  line-height: 25px;
  color: #101010;
  font-size: 18px;
  font-family: PingFangSC-medium;
}
.scrollarea .recommend .info {
  margin-top: 5px;
  line-height: 17px;
  color: #797979;
  font-size: 12px;
  font-family: PingFangSC-regular;
}
.scrollarea .recommend .recommend_list_wrapper {
  margin-top: 14px;
  height: 147px;
  overflow: hidden;
  white-space: nowrap;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li:nth-child(n+2) {
  margin-left: 5px;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li:nth-child(1) > view:first-child {
  background: linear-gradient(133.41deg, #28e997 23.74%, #0eb091 87.96%);
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li:nth-child(2) > view:first-child {
  background: linear-gradient(142.96deg, #fcc331 7.26%, #ff8a0e 87.5%);
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li:nth-child(3) > view:first-child {
  background: linear-gradient(138.54deg, #0fc3fc -0.21%, #2e88d8 89.89%);
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li:nth-child(4) > view:first-child {
  background: linear-gradient(138.54deg, #de868f -0.21%, #bd3124 89.89%);
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li {
  box-shadow: 3rpx 3rpx 10rpx 3rpx #e7e7e7;
  display: inline-block;
  border-radius: 7px;
  width: 111px;
  height: 147px;
  background-color: white;
  align-items: center;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li view:first-child {
  margin: auto;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 13px;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li view:first-child image {
  width: 20px;
  height: 20px;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li .num {
  margin: auto;
  width: 39px;
  height: 12px;
  line-height: 6px;
  border-radius: 50px;
  background-color: rgba(239, 239, 239, 0.61);
  color: #101010;
  font-size: 6px;
  padding-left: 2px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-top: 4px;
  margin-bottom: 9px;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li .num image {
  height: 10px;
  width: 10px;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li .num view {
  line-height: 12px;
  margin-left: 2px;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li .title {
  text-align: center;
  line-height: 14px;
  color: #101010;
  font-size: 10px;
  margin-top: 5px;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li .info {
  line-height: 12px;
  color: #797979;
  font-size: 8px;
  text-align: center;
}
.scrollarea .recommend .recommend_list_wrapper .recommend_li image:last-child {
  display: block;
  margin: auto;
  width: 24px;
  height: 24px;
}
.scrollarea .news {
  width: calc(100% - 44px);
  margin: auto;
  margin-top: 25px;
}
.scrollarea .news .news_bar {
  display: flex;
  gap: 10px;
  font-size: 16px;
  align-items: flex-end;
  margin-bottom: 4px;
}
.scrollarea .news .news_bar .news_bar_li:first-child {
  font-size: 18px;
}
.scrollarea .news .new_wrapper .news_li {
  margin-top: 21px;
}
.scrollarea .news .new_wrapper .news_li .nav_bar {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.scrollarea .news .new_wrapper .news_li .nav_bar view:nth-child(1) :first-child .icon {
  background-color: #F6B059;
}
.scrollarea .news .new_wrapper .news_li .nav_bar view:nth-child(2) :first-child .icon {
  background-color: #8F6AFF;
}
.scrollarea .news .new_wrapper .news_li .nav_bar view:nth-child(3) :first-child .icon {
  background-color: #EC1E71;
}
.scrollarea .news .new_wrapper .news_li .nav_bar view:nth-child(4) :first-child .icon {
  background-color: #03E391;
}
.scrollarea .news .new_wrapper .news_li .nav_bar view:nth-child(5) :first-child .icon {
  background-color: #1E9DFF;
}
.scrollarea .news .new_wrapper .news_li .nav_bar .bar_li {
  margin-top: 25px;
  height: 100%;
  width: calc(100% / 4);
}
.scrollarea .news .new_wrapper .news_li .nav_bar .bar_li navigator {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.scrollarea .news .new_wrapper .news_li .nav_bar .bar_li navigator .icon {
  width: 36px;
  height: 36px;
  background-color: brown;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.scrollarea .news .new_wrapper .news_li .nav_bar .bar_li navigator .icon image {
  width: 20px;
  height: 20px;
}
.scrollarea .news .new_wrapper .news_li .nav_bar .bar_li navigator .title {
  font-size: 12px;
}
